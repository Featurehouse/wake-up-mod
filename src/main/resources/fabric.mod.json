{
  "schemaVersion": 1,
  "id": "wake-up",
  "version": "${version}",

  "name": "Wake Up",
  "description": "Enabling players sleep even if others don't",
  "authors": [
    "teddyxlandlee"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/wake-up",
    "sources": "https://github.com/Featurehouse/wake-up-mod"
  },

  "license": "Apache-2.0",

  "environment": "server",
  "entrypoints": {
    "server": [
      "org.featurehouse.mcmod.wakeup.SleepManager::initializeServer"
    ]
  },
  "mixins": [
    "wake-up.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.10.0",
    "fabric-game-rule-api-v1": "*",
    "minecraft": "<1.17"
  },
  "suggests": {
    "sweet_potato": ">=1.2.0",
    "shurlin": "*"
  }
}
